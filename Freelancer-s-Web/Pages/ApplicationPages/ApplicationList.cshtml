@model Freelancer_s_Web.Pages.ApplicationPages.ApplicationListModel

@{
    ViewData["Title"] = "ApplicationList";
}

<h1>ApplicationList</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationForm[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationForm[0].Cv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationForm[0].Post)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationForm[0].User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationForm[0].CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationForm[0].UpdatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationForm[0].IsDeleted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationForm[0].CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationForm[0].UpdatedBy)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ApplicationForm) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Post.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Avatar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDeleted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedBy)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

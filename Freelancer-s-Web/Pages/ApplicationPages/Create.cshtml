@page
@model Freelancer_s_Web.Pages.ApplicationPages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Application Form - Post: @Model.Post.Title</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="postId" value="@Model.Post.Id" />
            <div class="form-group">
                <label asp-for="ApplicationForm.Cv" class="control-label"></label>
                <input asp-for="FileUpload.FormFile" type="file" accept="application/pdf>
                <span asp-validation-for="ApplicationForm.Cv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@page
@model Freelancer_s_Web.Pages.CommentPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Your Comment</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="comment.Id" />
            <input type="hidden" asp-for="comment.CreatedAt" />
            <input type="hidden" asp-for="comment.CreatedBy" />
            <input type="hidden" asp-for="comment.UpdatedAt" />
            <input type="hidden" asp-for="comment.UpdatedBy" />
            <input type="hidden" asp-for="comment.UserId" />
            <input type="hidden" asp-for="comment.PostId" />
            <input type="hidden" asp-for="comment.IsDeleted" />
            <div class="form-group">
                <label asp-for="comment.Content" class="control-label"></label>
                <input asp-for="comment.Content" class="form-control" />
                <span asp-validation-for="comment.Content" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
         </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

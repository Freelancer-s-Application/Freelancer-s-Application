@page
@model Freelancer_s_Web.Pages.PostPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Post.User" class="control-label"></label>
                <input asp-for="Post.UserId" class="form-control" type="hidden" value="ViewBag.UserId"/>
                <p>@Model.Post.User.DisplayName</p>
            </div>
            <div class="form-group">
                <label asp-for="Post.Title" class="control-label"></label>
                <input asp-for="Post.Title" class="form-control" />
                <span asp-validation-for="Post.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.Description" class="control-label"></label>
                <input asp-for="Post.Description" class="form-control" />
                <span asp-validation-for="Post.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Post.Status" class="form-control" type="hidden" />
                <span asp-validation-for="Post.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.MajorId" class="control-label"></label>
                <select asp-for="Post.MajorId" class="form-control" asp-items="ViewBag.MajorId"></select>
                <span asp-validation-for="Post.MajorId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Post.Id" />
            <div class="form-group">
                <input asp-for="Post.CreatedAt" class="form-control" type="hidden"/>
                <span asp-validation-for="Post.CreatedAt" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Post.IsDeleted" type="hidden"/>
                </label>
            </div>
            <div class="form-group">
                <input asp-for="Post.CreatedBy" class="form-control" type="hidden"/>
                <span asp-validation-for="Post.CreatedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@page
@model Freelancer_s_Web.Pages.PostPage.FinishModel

@{
    ViewData["Title"] = "Finish";
}

<h1>Finish</h1>

<h3>Are you sure you want to finish this post?</h3>
<div>
    <h4>Post</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Major)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Major.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.User.Email)
        </dd>
    </dl>
    
    <form method="post" asp-page-handler="Finish">
        <input type="hidden" value="@Model.Post.Id" name="id"/>
        <input type="submit" value="Finish" class="btn" />
    </form>
</div>
